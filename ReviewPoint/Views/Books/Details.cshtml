@model ReviewPoint.Business.ViewModels.BookDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pages)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pages)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            Front Cover
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.FrontCoverImageUrl)" alt="@Model.Title" style="width:200px;height:200px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>

    </dl>
</div>
<div>
    @foreach (var review in Model.Reviews)
    {
    <div class="pb-2">
        <div>
            <span style="font-weight: bold">
                Username:
            </span>
            <span>
                @Html.DisplayFor(modelItem => review.User.UserName)
            </span>
        </div>
        <div>
            <span style="font-weight: bold">
               Timestamp:
            </span>
            <span>
                @Html.DisplayFor(modelItem => review.Timestamp.Day).
                @Html.DisplayFor(modelItem => review.Timestamp.Month).
                @Html.DisplayFor(modelItem => review.Timestamp.Year)
            </span>
        </div>
        <div>
            <span style="font-weight: bold">
                Grade:
            </span>
            <span>
                @Html.DisplayFor(modelItem => review.Grade)
            </span>
         </div>
         <div>
            <span style="font-weight: bold">
                Review:
            </span>
            <span>
                @Html.DisplayFor(modelItem => review.Content)
            </span>
         </div>            
    </div>
     }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
